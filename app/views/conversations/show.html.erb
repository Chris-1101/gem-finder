<% @messages.each do |message| %>
  <div class="message">
    <%= cl_image_tag message.user.photo if message.user.photo? %>
    <div class="message-name">
      <h3><%= message.user.name %></h3>
      <p><%= message.created_at %></p>
    </div>
    <div class="message-body">
      <p><%= message.body %></p>
    </div>
  </div>
<% end %>

<%= simple_form_for [@conversation, Message.new] do |f| %>
  <%= f.input :body, input_html: { class: @messages.length > 0 ? "" : "body-height-1" } %>
  <%= f.submit "Submit you message here" %>
<% end %>
